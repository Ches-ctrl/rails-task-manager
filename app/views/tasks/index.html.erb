<h3>Task List:</h3>

<ul>
  <% @tasks.each_with_index do |task, index| %>
  <li class="d-flex justify-content-between">
    <div>
      <%= index + 1 %>.
      <%= link_to task.title, task_path(task.id) %>
    </div>
    <div>
      <%= check_box_tag "completed", task.completed, task.completed, data: { turbo_method: :patch } %>
      <%= link_to task_path(task.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
        <i class="fa-regular fa-trash-can" style="color: #3d84ff;"></i>
      <% end %>
    </div>
  </li>
  <% end %>
</ul>

<p class="pt-2"><%= link_to "Create new task 🎉", new_path %></p>
